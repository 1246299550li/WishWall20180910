/**index.wxss**/

.container {
  position: absolute;
  width: 92vw;
  margin-left: 4vw;
  margin-top: 10%;
  background-color: rgba(210, 146, 34, 0.2);
}

.userinfo {
  position: fixed;
  display: flex;
  flex-wrap: wrap;
  background-color: rgba(210, 146, 34, 0.4);
  width:92vw;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  margin-top: 75rpx;
  margin-left: 55rpx;
  border-radius: 50%;
}

.infogroup {
  flex-direction: column;
  margin: 10% auto;
  margin-bottom: 5%;
  justify-content: center;
}

.nickname {
  color: #aaa;
  margin: 50rpx;
}

.divLine {
  background: rgba(210, 146, 34, 0.450);
  width: 100%;
  height: 5rpx;
  margin-top: 20rpx;
}

.signin {
  margin-top: 30rpx;
  padding: 10rpx;
  text-align: center;
}

.signin-hover {
  background: rgba(210, 146, 34, 0.450);
  border-radius: 20rpx;
}

.funcgroup {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.func {
  height: 110rpx;
  width: 25%;
  background-color: rgba(210, 146, 34, 0.450);
  text-align: center;
}

.card {
  width: 90%;
  background-color: rgba(210, 146, 34, 0.450);
  margin: 36rpx;
  border-radius: 14rpx;
  padding-top: -20rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.226);
}

.title {
  width: 100rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
  margin-left: 9%;
  color: rgb(74, 53, 7);
  font-size: 46rpx;
  border-radius: 14%;
}

.section {
  width: 90%;
  word-break: break-all;
  margin: 15rpx auto;
  font-size: 40rpx;
}

.countDown {
  width: 90%;
  margin-left: 50%;
  color: rgb(104, 110, 108);
}

.btn {
  background-color: rgba(210, 144, 34, 0.350);
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
}

.none {
  width: 100%;
  margin-top: 40%;
  text-align: center;
  position: absolute;
  color: rgb(126, 117, 117);
}
