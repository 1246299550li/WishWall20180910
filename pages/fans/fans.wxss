/* pages/fans/fans.wxss */

.back {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.scrollbox {
    margin-left: 6%;
    width: 90%;
}

.block {
    display: flex;
    align-items: center;
    position: relative;
}

.userinfo {
    margin: 4%;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.nick {
    color: rgb(73, 73, 73);
    overflow:hidden;
}

.followIcon {
    position: absolute;
    right: 30rpx;
    height: 56rpx;
    width: 110rpx;
    font-size: 34rpx;
    padding-bottom: 5rpx;
    padding-top: 10rpx;
    text-align: center;       
    border-radius: 15rpx;
    background-color: rgb(0, 162, 255);
    color: white;
}

.none {
    width: 100%;
    margin-top: 40%;
    text-align: center;
    position: absolute;
    color: rgb(126, 117, 117);
}
