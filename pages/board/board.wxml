<image src="{{background}}" mode='aspectFill' style='top:0;position:fixed;width:100%;height:100%;z-index: -1;'></image>

<view class="content">
  <textarea bindinput="section" maxlength="500" placeholder="Write down your dream" value='{{section}}' />
  <view class="section">  
    <picker mode="date" value="{{date}}" start="2018-9-1" end="2038-1-1" bindchange="bindDateChange">  
      <view class="picker">{{dates}}</view>  
    </picker>  
  </view>
  <view style='position:absolute;top:90%;left:70%'>
    <button class="next-btu" bindtap='saveClick'>确定</button>
  </view>
</view>