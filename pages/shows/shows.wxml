<view style='margin-top:10%'>
  <image src="{{background}}" mode='aspectFill' style='position:fixed;width:100%;height:100%'></image>
  <view class="inner">
    <scroll-view class="scroll" scroll-y style='"height:{{scroll-height}}px";scroll-top="{{scrollTop}}"' lower-threshold='1000' bindscrolltolower="onReachBottom">
      <view wx:for="{{list}}" wx:for-index="lbl">
          <image class="userinfo" wx:if="{{item.avatarUrl==null}}" src="../../lib/img/head/unknow.png" bindtap='cli' data-id='{{item.userid}}'></image>
          <image class="userinfo" wx:if="{{item.avatarUrl!=null}}" src="{{item.avatarUrl}}" bindtap='cli' data-id='{{item.userid}}'></image>
          <view class="section se{{lbl%5}}">
            <image wx:if="{{item.com==1}}" src="../../lib/img/scom.png" style="right:65rpx;position:absolute;height:75rpx;width:75rpx"></image>
            <text style='line-height: 35px;'>{{item.section}}</text>
            <view wx:if="{{item.nick!=null}}" style='position:relative;margin:5%;color:#AAAAAA'>
              <text style='font-size:medium'>\n——{{item.nick}}</text>
            </view>
          <!--  <view class="box" wx:if="{{item.com==1}}">
              <image wx:if="{{curIdx!=1||item.id!=picture_id}}" class="box-image" src="{{imgUrl1}}" bindtap='chooseThis' data-id="{{item.id}}"></image>
              <image wx:if="{{curIdx==1&&item.id==picture_id}}"  class="box-image"  src="{{curUrl1}}"></image>
              <image wx:if="{{curIdx!=2||item.id!=picture_id}}" class="box-image" src="{{imgUrl2}}" bindtap='chooseThis2' data-id="{{item.id}}"></image>
              <image wx:if="{{curIdx==2&&item.id==picture_id}}"class="box-image"  src="{{curUrl2}}" data-id="{{item.id}}"></image>
            </view> -->
            
            <view class="box" wx:if="{{item.com==1}}">
            <image class="box-image" wx:if="{{collection}}" src="{{curUrl1}}" bindtap="toCollect"  data-id="{{item.id}}"></image>
            <image class="box-image" wx:else src="{{imgUrl1}}" bindtap="toCollect"></image>
            <image class="box-image" wx:if="{{collection}}" src="{{curUrl2}}" bindtap="toCollect"  data-id="{{item.id}}"></image>
            <image class="box-image" wx:else src="{{imgUrl2}}" bindtap="toCollect"></image>
            </view>
         
          </view>
      </view>
    </scroll-view>
  </view>
</view>